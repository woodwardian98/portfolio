{
  "compilerOptions": {
    /* === Output === */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "jsxImportSource": "preact",

    /* === Interop & typing === */
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    /* === Strictness === */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* === Paths & Aliases === */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* === Output control === */
    "noEmit": true
  },
  "include": [
    "src",
    "astro.config.mjs",
    "tailwind.config.js",
    "vite.config.*",
    "env.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}

---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
}

const { href, external, underline = true, ...rest } = Astro.props;
---

<a 
  href={href} 
  target={ external ? "_blank" : "_self" } 
  rel={ external ? "noopener noreferrer" : undefined }
  class={cn("inline-block decoration-neutral-black/15 dark:decoration-neutral-white/30 hover:decoration-neutral-black/25 hover:dark:decoration-neutral-white/50 text-current hover:text-neutral-black-soft hover:dark:text-neutral-white transition-colors duration-300 ease-in-out", underline && "underline underline-offset-2")}
  {...rest}>
  <slot/>
</a>

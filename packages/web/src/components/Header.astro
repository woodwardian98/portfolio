---
import { SITE_TITLE, MAIN_NAV, SOCIAL_LINKS } from "@workspace/utils";

// Get current path for active link highlighting
const currentPath = Astro.url.pathname;
---

<header class="navbar bg-base-100 shadow-lg sticky top-0 z-50">
    <div class="navbar-start">
        <!-- Mobile menu dropdown -->
        <div class="dropdown">
            <label tabindex="0" class="btn btn-ghost lg:hidden">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h8m-8 6h16"></path>
                </svg>
            </label>
            <ul
                tabindex="0"
                class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52"
            >
                {
                    MAIN_NAV.map((item) => (
                        <li>
                            <a
                                href={item.href}
                                class={
                                    currentPath === item.href ? "active" : ""
                                }
                            >
                                {item.name}
                            </a>
                            {item.children && (
                                <ul class="p-2">
                                    {item.children.map((child) => (
                                        <li>
                                            <a href={child.href}>
                                                {child.name}
                                            </a>
                                        </li>
                                    ))}
                                </ul>
                            )}
                        </li>
                    ))
                }
            </ul>
        </div>

        <!-- Site title -->
        <a href="/" class="btn btn-ghost normal-case text-xl font-bold">
            ðŸ”’ {SITE_TITLE}
        </a>
    </div>

    <!-- Desktop navigation -->
    <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1">
            {
                MAIN_NAV.map((item) => (
                    <li>
                        {item.children ? (
                            <div class="dropdown dropdown-hover">
                                <label tabindex="0" class="btn btn-ghost">
                                    {item.name}
                                    <svg
                                        class="fill-current"
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="20"
                                        height="20"
                                        viewBox="0 0 24 24"
                                    >
                                        <path d="m7,10l5,5l5,-5z" />
                                    </svg>
                                </label>
                                <ul
                                    tabindex="0"
                                    class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52"
                                >
                                    <li>
                                        <a href={item.href}>Overview</a>
                                    </li>
                                    <div class="divider my-1" />
                                    {item.children.map((child) => (
                                        <li>
                                            <a href={child.href}>
                                                {child.name}
                                            </a>
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        ) : (
                            <a
                                href={item.href}
                                class={
                                    currentPath === item.href ? "active" : ""
                                }
                            >
                                {item.name}
                            </a>
                        )}
                    </li>
                ))
            }
        </ul>
    </div>

    <!-- Right side actions -->
    <div class="navbar-end">
        <!-- Theme toggle -->
        <button
            class="btn btn-square btn-ghost"
            onclick="toggleTheme()"
            title="Toggle theme"
        >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                <path
                    d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
                ></path>
            </svg>
        </button>

        <!-- Social links -->
        <div class="hidden sm:flex">
            {
                SOCIAL_LINKS.map((link) => (
                    <a
                        href={link.href}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn btn-square btn-ghost"
                        title={link.name}
                    >
                        <span class="sr-only">{link.name}</span>
                        <svg
                            class="w-5 h-5"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            {link.icon === "github" && (
                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                            )}
                            {link.icon === "linkedin" && (
                                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                            )}
                            {link.icon === "twitter" && (
                                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
                            )}
                        </svg>
                    </a>
                ))
            }
        </div>
    </div>
</header>

<!-- Theme toggle script -->
<script>
    function toggleTheme() {
        const html = document.documentElement;
        const currentTheme = html.getAttribute("data-theme");
        const newTheme = currentTheme === "dark" ? "light" : "dark";
        html.setAttribute("data-theme", newTheme);
        localStorage.setItem("theme", newTheme);
    }

    // Set theme on page load
    document.addEventListener("DOMContentLoaded", () => {
        const savedTheme = localStorage.getItem("theme") || "dark";
        document.documentElement.setAttribute("data-theme", savedTheme);
    });
</script>

{
  "name": "@workspace/root",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/config/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@workspace/web",
    "build": "npm run build --workspaces --if-present",
    "preview": "npm run preview --workspace=@workspace/web",
    "dev:web": "npm run dev --workspace=@workspace/web",
    "build:web": "npm run build --workspace=@workspace/web",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/.astro packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
